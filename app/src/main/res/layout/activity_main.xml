<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_color"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/voice_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:padding="10dp"
        android:src="@drawable/ic_baseline_record_voice_over_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/result_output"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/sen_regular"
        android:text=""
        android:textColor="@color/blue"
        android:textSize="65sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/input_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/sen_regular"
        android:text=""
        android:textColor="@color/black"
        android:textColorLink="@color/blue"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/result_output" />


    <Button
        android:id="@+id/clear_button"
        android:layout_width="77dp"
        android:layout_height="77dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="@color/app_color"
        android:elevation="6dp"
        android:fontFamily="@font/sen_regular"
        android:text="C"
        android:textColor="@color/blue"
        android:textColorHighlight="@color/blue"
        android:textSize="29sp"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toStartOf="@+id/percentage_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_text" />


    <Button
        android:id="@+id/percentage_button"
        android:layout_width="77dp"
        android:layout_height="77dp"
        android:backgroundTint="@color/app_color"
        android:elevation="6dp"
        android:fontFamily="@font/sen_regular"
        android:text="%"
        android:textColor="@color/blue"
        android:textColorHighlight="@color/blue"
        android:textSize="29sp"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/clear_button"
        app:layout_constraintEnd_toStartOf="@+id/division_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/clear_button"
        app:layout_constraintTop_toTopOf="@+id/clear_button" />

    <Button
        android:id="@+id/division_button"
        android:layout_width="77dp"
        android:layout_height="77dp"
        android:backgroundTint="@color/app_color"
        android:elevation="6dp"
        android:fontFamily="@font/sen_regular"
        android:text="÷"
        android:textColor="@color/blue"
        android:textColorHighlight="@color/blue"
        android:textSize="29sp"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/percentage_button"
        app:layout_constraintEnd_toStartOf="@+id/multiplication_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/percentage_button"
        app:layout_constraintTop_toTopOf="@+id/percentage_button" />

    <Button
        android:id="@+id/button_7"
        android:layout_width="77dp"
        android:layout_height="77dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/app_color"
        android:elevation="6dp"
        android:fontFamily="@font/sen_regular"
        android:text="7"
        android:textColor="@color/black"
        android:textColorHighlight="@color/blue"
        android:textSize="29sp"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toStartOf="@+id/button_8"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clear_button" />

    <Button
        android:id="@+id/button_8"
        android:layout_width="77dp"
        android:layout_height="77dp"
        android:backgroundTint="@color/app_color"
        android:elevation="6dp"
        android:fontFamily="@font/sen_regular"
        android:text="8"
        android:textColor="@color/black"
        android:textSize="29sp"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/button_7"
        app:layout_constraintEnd_toStartOf="@+id/button_9"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button_7"
        app:layout_constraintTop_toTopOf="@+id/button_7" />

    <Button
        android:id="@+id/button_9"
        android:layout_width="77dp"
        android:layout_height="77dp"
        android:backgroundTint="@color/app_color"
        android:elevation="6dp"
        android:fontFamily="@font/sen_regular"
        android:text="9"
        android:textColor="@color/black"
        android:textSize="29sp"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/button_8"
        app:layout_constraintEnd_toStartOf="@+id/subtraction_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button_8"
        app:layout_constraintTop_toTopOf="@+id/button_8" />

    <Button
        android:id="@+id/multiplication_button"
        android:layout_width="77dp"
        android:layout_height="77dp"
        android:backgroundTint="@color/blue"
        android:elevation="6dp"
        android:fontFamily="@font/sen_regular"
        android:text="×"
        android:textColor="@color/app_color"
        android:textSize="30sp"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/division_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/division_button"
        app:layout_constraintTop_toTopOf="@+id/division_button" />

    <Button
        android:id="@+id/button_4"
        android:layout_width="77dp"
        android:layout_height="77dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/app_color"
        android:elevation="6dp"
        android:fontFamily="@font/sen_regular"
        android:text="4"
        android:textColor="@color/black"
        android:textSize="29sp"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toStartOf="@+id/button_5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_7" />

    <Button
        android:id="@+id/button_5"
        android:layout_width="77dp"
        android:layout_height="77dp"
        android:backgroundTint="@color/app_color"
        android:elevation="6dp"
        android:fontFamily="@font/sen_regular"
        android:text="5"
        android:textColor="@color/black"
        android:textSize="29sp"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/button_4"
        app:layout_constraintEnd_toStartOf="@+id/button_6"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button_4"
        app:layout_constraintTop_toTopOf="@+id/button_4" />

    <Button
        android:id="@+id/button_6"
        android:layout_width="77dp"
        android:layout_height="77dp"
        android:backgroundTint="@color/app_color"
        android:elevation="6dp"
        android:fontFamily="@font/sen_regular"
        android:text="6"
        android:textColor="@color/black"
        android:textSize="29sp"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/button_5"
        app:layout_constraintEnd_toStartOf="@+id/addition_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button_5"
        app:layout_constraintTop_toTopOf="@+id/button_5" />

    <Button
        android:id="@+id/subtraction_button"
        android:layout_width="77dp"
        android:layout_height="77dp"
        android:backgroundTint="@color/blue"
        android:elevation="6dp"
        android:fontFamily="@font/sen_regular"
        android:text="−"
        android:textColor="@color/app_color"
        android:textSize="35sp"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/button_9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button_9"
        app:layout_constraintTop_toTopOf="@+id/button_9" />

    <Button
        android:id="@+id/button_2"
        android:layout_width="77dp"
        android:layout_height="77dp"
        android:backgroundTint="@color/app_color"
        android:elevation="6dp"
        android:fontFamily="@font/sen_regular"
        android:text="2"
        android:textColor="@color/black"
        android:textSize="29sp"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/button_1"
        app:layout_constraintEnd_toStartOf="@+id/button_3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button_1"
        app:layout_constraintTop_toTopOf="@+id/button_1" />

    <Button
        android:id="@+id/addition_button"
        android:layout_width="77dp"
        android:layout_height="77dp"
        android:backgroundTint="@color/blue"
        android:elevation="6dp"
        android:fontFamily="@font/sen_regular"
        android:text="+"
        android:textColor="@color/app_color"
        android:textSize="29sp"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/button_6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button_6"
        app:layout_constraintTop_toTopOf="@+id/button_6" />

    <Button
        android:id="@+id/button_1"
        android:layout_width="77dp"
        android:layout_height="77dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/app_color"
        android:elevation="6dp"
        android:fontFamily="@font/sen_regular"
        android:text="1"
        android:textColor="@color/black"
        android:textSize="29sp"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toStartOf="@+id/button_2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_4" />

    <Button
        android:id="@+id/button_3"
        android:layout_width="77dp"
        android:layout_height="77dp"
        android:backgroundTint="@color/app_color"
        android:elevation="6dp"
        android:fontFamily="@font/sen_regular"
        android:text="3"
        android:textColor="@color/black"
        android:textSize="29sp"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/button_2"
        app:layout_constraintEnd_toStartOf="@+id/equal_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button_2"
        app:layout_constraintTop_toTopOf="@+id/button_2" />

    <Button
        android:id="@+id/button_0"
        android:layout_width="77dp"
        android:layout_height="77dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/app_color"
        android:elevation="6dp"
        android:fontFamily="@font/sen_regular"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="29sp"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toStartOf="@+id/point_button"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_1" />

    <Button
        android:id="@+id/point_button"
        android:layout_width="77dp"
        android:layout_height="77dp"
        android:backgroundTint="@color/app_color"
        android:elevation="6dp"
        android:fontFamily="@font/sen_regular"
        android:text="."
        android:textColor="@color/black"
        android:textSize="30sp"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/button_0"
        app:layout_constraintEnd_toStartOf="@+id/back_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button_0"
        app:layout_constraintTop_toTopOf="@+id/button_0"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/back_button"
        android:layout_width="77dp"
        android:layout_height="77dp"
        android:backgroundTint="@color/app_color"
        android:elevation="6dp"
        android:fontFamily="@font/sen_regular"
        android:text="\u232b"
        android:textColor="@color/blue"
        android:textSize="29sp"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/point_button"
        app:layout_constraintEnd_toStartOf="@+id/equal_button"
        app:layout_constraintStart_toEndOf="@+id/point_button"
        app:layout_constraintTop_toTopOf="@+id/point_button" />

    <Button
        android:id="@+id/equal_button"
        android:layout_width="72dp"
        android:layout_height="177dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/blue"
        android:elevation="6dp"
        android:fontFamily="@font/sen_regular"
        android:text="="
        android:textColor="@color/app_color"
        android:textSize="30sp"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addition_button" />


</androidx.constraintlayout.widget.ConstraintLayout>